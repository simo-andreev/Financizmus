<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.CustomTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorGreen</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="TransactionNumpadRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="TransactionNumpadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/all_text_size_huge</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/orange_button</item>
    </style>



    <style name="TransactionDetailsTitle">
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/all_view_spacing_small</item>
        <item name="android:text">@string/test_text</item>
    </style>


    <style name="PieChartMenuSpacer">
        <item name="android:layout_width">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="PieChartMenuRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="PieChartMenuItem">
        <item name="android:padding">24dp</item> <!-- TODO check for smaller screens and change if necessary!-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="UserDataInput">
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/all_view_spacing_tiny</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dropdown_list_preferred_item_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorLightGreen</item>
        <item name="android:textSize">@dimen/all_text_size_standard</item>
    </style>

    <style name="RegisterButton">
        <item name="android:layout_marginTop">@dimen/all_view_spacing_standard</item>
        <item name="android:layout_marginBottom">@dimen/all_view_spacing_standard</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/appbar_elevation</item>
        <item name="android:background">@drawable/balance_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/all_text_size_large</item>
    </style>

</resources>
